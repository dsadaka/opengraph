<p style="color: green"><%= notice %></p>

<%= turbo_stream_from "urls" %>

<div id="urls" class="container-md">
  <div class="card shadow">
    <h2 style="padding-left: 5px;">Preview Opengraph Information from Webpages</h2>
  </div>
  <%= render "form", url: @url %>

  <p></p>
  <div class="container-sm">
    <table class="table table-striped table-bordered table-small">
      <thead>
      <th scope="col">URL</th>
      <th scope="col">Title</th>
      <th scope="col">Image</th>
      <th></th>
      </thead>
      <tbody class="table-group-divider">
      <% @urls.each do |url| %>
        <%= render url %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
